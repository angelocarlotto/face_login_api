# Set the working directory
WORKDIR /app

# Install the Python packages from the requirements file
RUN echo "cooment here to avoid cache" &&  python3 -m venv venv && \
    . venv/bin/activate && \
    pip3 install --upgrade pip && \
    pip3 install Flask flask_cors flasgger opencv-python opencv-python-headless wheel dlib face_recognition setuptools
